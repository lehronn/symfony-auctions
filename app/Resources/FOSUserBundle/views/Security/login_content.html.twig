{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label class="" for="username">Login</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label class="" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="_password" required="required" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label class="form-check-label" for="remember_me">Remember my login.</label>
    </div>
    <div class="form-group">
        <input class="btn btn-success" type="submit" id="_submit" name="_submit" value="Login" />
    </div>
</form>
