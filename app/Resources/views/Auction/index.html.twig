{% extends 'base.html.twig' %}

{% block body %}
	<h1>Auctions list:</h1>
	{% for auction in auctions %}
	<div class="card">
		<h5 class="card-header"><a href="{{ url("auction_details", {"id": auction.id}) }}">{{ auction.title }}</a></h5>
		<div class="card-body">
			<p class="card-text"></p>
			<p class="card-text">{{ auction.description }}</p>
			<hr />
			Price now: {{ auction.price }}z≈Ç.
			<p>Auction will expired: {{ auction.expiresAt | date("d.m.Y H:i") }}.</p>
			<a href="{{ url("auction_details", {"id": auction.id}) }}" class="btn btn-outline-primary">Details</a>

		</div>




	{% else %}
	<div class="card">
		<h5 class="card-header">No found any auctions.</h5>
	</div>
	{% endfor %}

{% endblock %}
