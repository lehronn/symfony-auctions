{% extends 'base.html.twig' %}

{% block body %}
	<h1>Auctions list:</h1>
	{% for auction in auctions %}
	<div class="card">
		<h5 class="card-header"><a href="{{ url("auction_details", {"id": auction.id}) }}">{{ auction.title }}</a></h5>
		<div class="card-body">
			<p class="card-text">{{ auction.description }}</p>
			<p>Price: {{ auction.price }}</p>
			<a href="{{ url("auction_details", {"id": auction.id}) }}" class="btn btn-outline-primary">Go to the details</a>
		</div>
	</div>
	{% endfor %}

{% endblock %}
